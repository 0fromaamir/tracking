{
  "name": "my-app",
  "version": "1.0.0",
  "description": "React + Node.js + Electron portable app",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "server": "node server.js",
    "build-client": "cd ../client && npm install && npm run build",
    "package": "npm run build-client && electron-forge package",
    "make": "npm run build-client && electron-forge make"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "electron-is-dev": "^2.0.0",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "node-rtsp-stream": "^0.0.9",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/core": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "electron": "^26.0.0"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "asarUnpack": [
      "preload.js"
    ]
  },
  "author": "Your Name"
